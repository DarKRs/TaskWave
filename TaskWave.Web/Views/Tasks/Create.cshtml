@model TaskWave.Domain.Entities.ProjectTask

<h2>Create Task</h2>
 
<form asp-action="Create">
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" />
    </div>
    <div>
        <label for="Description">Description</label>
        <textarea id="Description" name="Description"></textarea>
    </div>
    <div>
        <label for="ProjectId">Project</label>
        @if (ViewBag.Projects != null)
        {
            <select asp-for="ProjectId" asp-items="ViewBag.Projects"></select>
        }
        else
        {
            <p>Projects list is unavailable.</p>
        }
        @* <select asp-for="ProjectId" asp-items="@(new SelectList(ViewBag.Projects, "ProjectId", "Name"))"></select> *@
    </div>

    <button type="submit">Create</button>
</form>